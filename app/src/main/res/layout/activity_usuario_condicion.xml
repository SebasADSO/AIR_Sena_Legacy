<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usuario_condicion">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#50B136"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/sena_logo_2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btt_logout"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:backgroundTint="#00FFFFFF"
                        android:importantForAccessibility="no"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/exit_app_logo" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/padre"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btt_next_condicion"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_margin="20dp"
                    android:backgroundTint="#50B136"
                    android:text="Usuario Info" />

                <Button
                    android:id="@+id/btt_next_rolinfo"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_margin="20dp"
                    android:backgroundTint="#50B136"
                    android:text="Info Rol" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btt_next_menu"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_margin="20dp"
                    android:backgroundTint="#50B136"
                    android:text="Menu" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>