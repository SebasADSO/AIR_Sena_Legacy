<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu_consultafunc">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#50B136"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/sena_logo_2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btt_logout"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:backgroundTint="#00FFFFFF"
                        android:importantForAccessibility="no"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/exit_app_logo" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_id_reporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="34sp" />
            <TextView
                android:id="@+id/txt_cod_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="text"
                android:layout_margin="10dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="#ABD57B"
                android:textSize="28sp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/txt_encabezado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:backgroundTint="#ABD57B"
                android:text="text22"
                android:textSize="20sp"
                android:textAlignment="center"
                android:background="@drawable/roundcorner"/>
            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:backgroundTint="#ABD57B"
                android:text="text22"
                android:textSize="20sp"
                android:textAlignment="center"
                android:background="@drawable/roundcorner"/>
            <TextView
                android:id="@+id/txt_lugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:backgroundTint="#ABD57B"
                android:text="text22"
                android:textSize="20sp"
                android:textAlignment="center"
                android:background="@drawable/roundcorner"/>

            <TextView
                android:id="@+id/txt_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="#ABD57B"
                android:padding="5dp"
                android:text="peligro"
                android:textAlignment="center"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/soporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TIPO DE PELIGRO"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_nivel_peligro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:inputType="text"
                android:layout_margin="10dp"
                android:backgroundTint="#ABD57B"
                android:textSize="26sp"
                android:textAlignment="center"
                android:background="@drawable/roundcorner"/>

            <TextView
                android:id="@+id/textView37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NIVEL DE PELIGRO"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_tipo_peligro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:inputType="text"
                android:layout_margin="10dp"
                android:backgroundTint="#ABD57B"
                android:textSize="26sp"
                android:textAlignment="center"
                android:background="@drawable/roundcorner"/>

            <TextView
                android:id="@+id/textView38"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FECHA DE REVISIÃ“N"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_fecha_revision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="fecha"
                android:layout_margin="10dp"
                android:backgroundTint="#ABD57B"
                android:textSize="26sp"
                android:textAlignment="center"
                android:background="@drawable/roundcorner"/>

            <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ESTADO"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="#ABD57B"
                android:padding="5dp"
                android:text="N/A"
                android:textAlignment="center"
                android:textSize="36sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btt_revisar"
                android:layout_width="205dp"
                android:layout_height="69dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#50B136"
                android:text="REVISAR" />

            <Button
                android:id="@+id/btt_salir"
                android:layout_width="205dp"
                android:layout_height="69dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#50B136"
                android:text="CANCELAR" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>