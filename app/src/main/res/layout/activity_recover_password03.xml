<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    tools:context=".recover_password_03">

    <ScrollView
        android:id="@+id/scrollView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Recuperación de contraseña"
                android:textAlignment="center"
                android:textSize="60sp" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="Nueva Contraseña"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_password"
                style="TextInputEditText.FilledBox"
                android:layout_width="344dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="#ABD57B "
                android:ems="10"
                android:hint="Nueva Contraseña"
                android:inputType="textVisiblePassword"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="14dp"
                android:paddingEnd="16dp"
                android:paddingBottom="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/txt_password22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Confirme la contraseña"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_password_confirm"
                style="TextInputEditText.FilledBox"
                android:layout_width="344dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="#ABD57B "
                android:ems="10"
                android:hint="Confirme la contraseña"
                android:inputType="textVisiblePassword"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="14dp"
                android:paddingEnd="16dp"
                android:paddingBottom="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <Button
                android:id="@+id/btt_recover_cambiar"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="120dp"
                android:backgroundTint="#50B136"
                android:text="Recuperar"
                android:textSize="20sp" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>