<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:animateLayoutChanges="true"
    android:padding="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@drawable/roundcorner"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageView
                android:id="@+id/imageView999"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/roundcorner"
                android:backgroundTint="#8BC34A"
                app:srcCompat="@drawable/user" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="211dp"
                android:layout_height="115dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="-286dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="111dp"
                android:layout_marginBottom="13dp"
                android:layout_toEndOf="@id/imageView999"
                android:layout_toRightOf="@id/estadouser_txt"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/coduser_txt"
                    android:layout_width="205dp"
                    android:layout_height="wrap_content"
                    android:text="id"
                    android:textColor="@android:color/black"
                    android:textSize="36dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nombreuser_txt"
                    android:layout_width="200dp"
                    android:layout_height="49dp"
                    android:layout_margin="5dp"
                    android:text="title"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/estadouser_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="107dp"
                android:text="STATUS"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>