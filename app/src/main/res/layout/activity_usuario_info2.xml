<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usuario_info2">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#50B136"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/sena_logo_2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btt_logout"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:backgroundTint="#00FFFFFF"
                        android:importantForAccessibility="no"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/exit_app_logo" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REGISTRO"
                    android:textSize="60sp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Cargo que desempeña" />

                <TextView
                    android:id="@+id/txt_cod_program"
                    style="TextInputEditText.FilledBox"
                    android:layout_width="344dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/roundcorner"
                    android:backgroundTint="#ABD57B"
                    android:ems="10"
                    android:hint="2xxxxxxx"
                    android:paddingStart="16dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="14dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="10dp"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Nivel de formación" />

                <TextView
                    android:id="@+id/txt_num_ficha"
                    style="TextInputEditText.FilledBox"
                    android:layout_width="344dp"
                    android:layout_height="50dp"
                    android:background="@drawable/roundcorner"
                    android:backgroundTint="#ABD57B"
                    android:ems="10"
                    android:hint="2xxxxxxx"
                    android:paddingStart="16dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="14dp"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="10dp"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Dias que labora" />

                <TextView
                    android:id="@+id/txt_nombre_programa"
                    style="TextInputEditText.FilledBox"
                    android:layout_width="344dp"
                    android:layout_height="50dp"
                    android:background="@drawable/roundcorner"
                    android:backgroundTint="#ABD57B"
                    android:ems="10"
                    android:hint="Analisis....."
                    android:paddingStart="16dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="14dp"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="10dp"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btt_next_condicion"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_margin="20dp"
                    android:backgroundTint="#50B136"
                    android:text="Condicion" />

                <Button
                    android:id="@+id/btt_next_rolinfo"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_margin="20dp"
                    android:backgroundTint="#50B136"
                    android:text="Usuario Info" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btt_next_menu"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_margin="20dp"
                    android:backgroundTint="#50B136"
                    android:text="Menu" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>