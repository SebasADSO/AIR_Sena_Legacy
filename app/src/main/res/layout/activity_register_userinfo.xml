<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:paddingBottom="30dp"
    tools:context=".register_userinfo">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTRO"
                android:textSize="60sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:layout_marginTop="6dp"
                android:text="Nombre"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_username"
                style="@style/Widget.Material3.TextInputEditText.FilledBox"
                android:layout_width="344dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="#ABD57B"
                android:ems="10"
                android:hint="NOMBRES"
                android:hyphenationFrequency="normal"
                android:inputType="textPersonName"
                android:paddingTop="14dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="20dp"
                android:text="APELLIDOS"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_lastname"
                style="@style/Widget.Material3.TextInputEditText.FilledBox"
                android:layout_width="344dp"
                android:layout_height="50dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="#ABD57B "
                android:ems="10"
                android:hint="APELLIDOS"
                android:inputType="textPersonName"
                android:paddingTop="14dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="TIPO DE DOCUMENTO"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/docselect_register"
                android:layout_width="344dp"
                android:layout_height="50dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="#ABD57B"
                android:dropDownSelector="@android:drawable/arrow_down_float" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="N° DE DOCUMENTO"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_n_doc"
                style="@style/Widget.Material3.TextInputEditText.FilledBox"
                android:layout_width="344dp"
                android:layout_height="50dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="#ABD57B "
                android:digits="0123456789"
                android:ems="10"
                android:hint="N° DOCUMENTO"
                android:inputType="number"
                android:paddingTop="14dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="26dp"
                android:text="CORREO ELECTRONICO"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_email_user"
                style="@style/Widget.Material3.TextInputEditText.FilledBox"
                android:layout_width="344dp"
                android:layout_height="50dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="#ABD57B "
                android:ems="10"
                android:hint="CORREO ELECTRONICO"
                android:inputType="textEmailAddress"
                android:paddingTop="14dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="26dp"
                android:text="CONTRASEÑA"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_password_user"
                style="@style/Widget.Material3.TextInputEditText.FilledBox"
                android:layout_width="344dp"
                android:layout_height="50dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="#ABD57B "
                android:ems="10"
                android:layout_weight="8"
                android:hint="CONTRASEÑA"
                android:inputType="text|textVisiblePassword"
                android:paddingTop="14dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="CONFIRMA CONTRASEÑA"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_password_user_confirm"
                style="@style/Widget.Material3.TextInputEditText.FilledBox"
                android:layout_width="344dp"
                android:layout_height="50dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="#ABD57B "
                android:ems="10"
                android:layout_weight="8"
                android:hint="CONTRASEÑA"
                android:inputType="text|textVisiblePassword"
                android:paddingTop="14dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <Button
                android:id="@+id/btt_next_register"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:backgroundTint="#50B136"
                android:text="Siguiente" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>