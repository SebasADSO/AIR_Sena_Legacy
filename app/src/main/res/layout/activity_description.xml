<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DescriptionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#50B136"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/sena_logo_2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btt_logout"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:backgroundTint="#00FFFFFF"
                        android:importantForAccessibility="no"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/exit_app_logo" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_id_reporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="34sp" />
            <TextView
                android:id="@+id/txt_cod_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="text"
                android:layout_margin="10dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="#ABD57B"
                android:textSize="28sp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/txt_encabezado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:backgroundTint="#ABD57B"
                android:text="text22"
                android:textSize="20sp"
                android:textAlignment="center"
                android:background="@drawable/roundcorner"/>
            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:backgroundTint="#ABD57B"
                android:text="text22"
                android:textSize="20sp"
                android:textAlignment="center"
                android:background="@drawable/roundcorner"/>
            <TextView
                android:id="@+id/txt_lugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:backgroundTint="#ABD57B"
                android:text="text22"
                android:textSize="20sp"
                android:textAlignment="center"
                android:background="@drawable/roundcorner"/>
            <TextView
                android:id="@+id/txt_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:backgroundTint="#ABD57B"
                android:text="Señor Ikari tracionara Seele"
                android:textSize="20sp"
                android:textAlignment="center"
                android:background="@drawable/roundcorner"/>

            <ImageView
                android:id="@+id/soporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/txt_nivel_peligro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:backgroundTint="#ABD57B"
                android:text="Señor Ikari"
                android:textSize="26sp"
                android:textAlignment="center"
                android:background="@drawable/roundcorner"/>
            <TextView
                android:id="@+id/txt_tipo_peligro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:backgroundTint="#ABD57B"
                android:text="Señor Ikari"
                android:textSize="26sp"
                android:textAlignment="center"
                android:background="@drawable/roundcorner"/>
            <TextView
                android:id="@+id/txt_fecha_revision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:backgroundTint="#ABD57B"
                android:text="Señor Ikari"
                android:textSize="26sp"
                android:textAlignment="center"
                android:background="@drawable/roundcorner"/>

            <TextView
                android:id="@+id/txt_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="#ABD57B"
                android:padding="5dp"
                android:text="Señor Ikari"
                android:textAlignment="center"
                android:textSize="36sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>